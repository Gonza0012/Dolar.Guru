    }

    .dragging {
      cursor: grabbing;
      user-select: none;
    }

    .modal-backdrop {
      position: fixed;
      top: 0; left: 0;
      width: 100vw;
      height: 100vh;
      background-color: rgba(0, 0, 0, 0.5);
